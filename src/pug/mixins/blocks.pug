mixin sliderItem(img,video)
	.slider-item.swiper-slide
		.slider-item__wrap-block
			.slider-item__block
				.slider-item__image(style=img)
				video.slider-item__vid-ps(loop="loop" autoplay="autoplay" muted="muted")
					source(src=video type='video/mp4')
				video.slider-item__vid-mob(loop="loop" autoplay="autoplay" muted="muted" playsinline)
					source(src=video type='video/mp4')

mixin services(img,name)
	a.services-block(href="#")
		.services-block__image
			img(src=img alt="image")
		h6=name

mixin page__banner(title)
	.page__banner
		h2=title
			

mixin instagram(img,desc)
	.instagram-block.swiper-slide(class=cl)
		.instagram-block__image
			img(src=img)
		.instagram-block__desc
			p=desc


mixin shooting__type-block(img, title)
	.shooting__type
		img(src=img alt="image")
		.shooting__type-desc
			h3=title
			a(href="#").btn.btn--small Выбрать

mixin navigation-arrows__items-center
	.navigation-arrows__item.prev
		+svg('prev')
	.navigation-arrows__item.next
		+svg('next')

mixin placement__slider-item(img)
	.swiper-slide
		.placement__slider-item__block
			.placement__slider-item__image
				img(src=img alt="image")
			.placement__slider-item__label
				+svg('circle-arrow')
				p Виртуальный тур
				




