extends pug/base

append vars
	- title = 'UiKit'

block content
	style.
		.elem {
			margin-bottom: 80px;
		}

		.elem .row {
			display: flex;
			justify-content: space-between;
		}

		.button .row {
			max-width: 588px;
			margin: 0 0 16px;
		}

		.button .row .col {
			max-width: 160px;
			width: 100%;
			margin: 0 10px;
		}

		.input .row {
			max-width: 730px;
			margin: 0 0 37px;
		}

		.elem {
			width: 100%;
		}

		.input .row .col,.select .row .col {
			max-width: 350px;
			width: 100%;
			margin: 5px;
		}

		.checkbox .row {
			max-width: 350px;
		}

		.select .row {
			max-width: 730px;
		}

		.tooltip .icon {
			color: #212429;
			fill: transparent;
			width: 24px;
			height: 24px;
		}

		.tooltip .icon svg {
			width: 100%;
			height: 100%;
		}

		.links .row {
			max-width: 500px;
			margin-bottom: 20px;
		}

		.links .row .col{
			margin-right: 78px;
		}

		.nav .row {
			max-width: 250px;
			align-items: center;
		}
		.block-popup .row {
			justify-content: flex-start;
		}
		.block-popup .row .col{
			width: auto;
			max-width: none;
			margin-left: 0;
			margin-right: 30px;
		}
		.fb-wrap {
			display: flex;
		}
		.fx-item {
			width: calc(100% - 300px)
		}
		.w15 {
			width: 300px;
		}
		.fx-item:first-child h3 {
			margin-top: 0;
		}
		.fx-item h1:first-child {
			margin-top: 0;
		}
		.color {
			display: flex;
		}
		.color-box {
			width: 120px;
			height: 120px;
			border-radius: 8px;
			margin-right: 22px;
		}
		.color-line {
			width: 120px;
			height: 54px;
		}
		.typography__line {
			position: relative;
			padding-left: 100px
		}
		.typography__name {
			width: 100px;
			position: absolute;
			top: 50%;
			transform: translateY(-50%);
			left: 0;
			color: #CACACA;
			font-size: 12px;
		}
		.typography__flex {
			display: flex;
			margin-bottom: 20px;
		}
		.typography__unit {
			margin-right: 50px;
		}
		.typography__unit:last-child {
			margin-right: 0;
		}
	.wrapper
		.fb-wrap
			.fx-item.w15
				h3 Цвета
			.fx-item
				.color.elem
					.color-box.orange
					.color-box.light-orange-gradient
					.color-box.yellow
					.color-box.beige
					.color-box.green
				.color.elem
					.color-line.black
					.color-line.gray4
					.color-line.gray3
					.color-line.gray2
					.color-line.gray1
		.fb-wrap
			.fx-item.w15
				h3 Типографика
			.fx-item
				.typography.elem
					.typography__line
						.typography__name h1
						.typography__value
							h1 Hayes Valley Studio
					.typography__line
						.typography__name h2
						.typography__value
							h2 Hayes Valley Studio
					.typography__line
						.typography__name h3
						.typography__value
							h3 Hayes Valley Studio
					.typography__line
						.typography__name h4
						.typography__value
							h4 Hayes Valley Studio
					.typography__line
						.typography__name h5
						.typography__value
							h5 Hayes Valley Studio
					.typography__line
						.typography__name h6 
						.typography__value
							h6 Hayes Valley Studio
					.typography__line
						.typography__name p b
						.typography__value
							p
								b Hayes Valley Studio
					.typography__line
						.typography__name p
						.typography__value
							p Hayes Valley Studio
					.typography__line
						.typography__name small
						.typography__value
							small Hayes Valley Studio

		.fb-wrap
			.fx-item.w15
				h3 Кнопки
			.fx-item
				.button.elem
					.typography__line
						.typography__name DEFAULT
						.typography__flex
							.typography__unit
								a.btn(href="#") Найти
							.typography__unit
								a.btn.btn--gray(href="#") 5 гостей
							.typography__unit
								a.btn.btn--bor(href="#") Забронировать
					.typography__line
						.typography__name DISABLED
						.typography__flex
							.typography__unit
								a.btn.disabled(href="#") Найти
							.typography__unit
								a.btn.btn--gray.disabled(href="#") 5 гостей
							.typography__unit
								a.btn.btn--bor.disabled(href="#") Забронировать

		.fb-wrap
			.fx-item.w15
				h3 Формы
			.fx-item
				.input.elem
					.row
						.col
							label.form-field
								input.js-input.js-input-mask.form-field__input(type='text' data-msg="")
								span.form-field__label Фамилия *
								span.form-field__icon
									+svg('alert')
						.col
							label.form-field.form-field--error
								input.js-input.form-field__input(type='text', value='Заполните форму')
								span.form-field__label Error
								span.form-field__icon
									+svg('alert')
					.row
						.col
							label.form-field.disabled
								input.js-input.form-field__input(type='text')
								span.form-field__label Disabled
								span.form-field__icon
									+svg('alert')

		.select.elem
			.row
				.col
					.form-select
						span.form-select__label Select
						select.js-select(name='state')
							option(value='MA') Magnetic
							option(value='GY') Gravity
							option(value='ME') Mechanical Mechanical
							option(value='EL') Electronic
							option(value='EL') Electronic
				.col
					.form-select
						span.form-select__label Select Input
						select.js-select-input(name='state')
							option(value='MA') Magnetic
							option(value='GY') Gravity
							option(value='ME') Mechanical
							option(value='EL') Electronic
							option(value='EL') Electronic
			.row
				.col
					.form-select.disabled
						span.form-select__label Select
						select.js-select(name='state')
							option(value='MA') Disabled

		.checkbox.elem
			.row
				.col
					label.form-checkbox
						input.form-checkbox__input(type='checkbox')
						span.form-checkbox__checkmark
						span.form-checkbox__text Default
				.col
					label.form-radio
						input.form-radio__input(type='radio' name='account')
						span.form-radio__checkmark
						span.form-radio__text Default
			.row
				.col
					label.form-checkbox.disabled
						input.form-checkbox__input(type='checkbox')
						span.form-checkbox__checkmark
						span.form-checkbox__text Default
				.col
					label.form-radio.disabled
						input.form-radio__input(type='radio' name='account')
						span.form-radio__checkmark
						span.form-radio__text Default

		.tooltip.elem
			.row
				.col
					.js-tooltip(title='Helper Text Helper Text Helper Text Text Text')
						.icon
							+svg('question')

		.tag.elem
			.row
				.col
					.tag
						a.tag__item(href='#!'): span 1 of 12
						a.tag__item(href='#!'): span Favorite
						a.tag__item(href='#!'): span Category
						a.tag__item.tag__item--icon(href='#!')
							+svg('share')
							span SHared

		.links.elem
			.row
				.col
					a.link.link--arrow.link--blue(href='#!')
						span Смотреть все
						+svg('arrow')

		.filters.elem
			.row
				.col
					.form-filter
						.form-filter__label Сортировать
						select.js-select-filter(name='sort')
							option(value='fav') Популярные
							option(value='price') По стоимости
							option(value='low_price') Цена убывает
							option(value='high_price') Цена возрастает

		.element.elem
			.row
				.col
					.counter
						span.counter__item.js-sub
						span.counter__item
							span.js-counter-text 0
							input.js-counter-input(title='number', hidden, value='0')
						span.counter__item.js-add

		.nav.elem
			.row
				.col
					.close-icon
						+svg('close')
				.col
					.navigation-arrows
						.navigation-arrows__item
							+svg('arrow')
						.navigation-arrows__item
							+svg('arrow')

		.buttons.elem
			.row
				.col
					.btn-group
						a.btn-group__item.btn-group__item--active(href='#!') Мероприятия 21
						a.btn-group__item(href='#!') Мероприятия 22
						a.btn-group__item(href='#!') Мероприятия 23

		include pug/particles/form-example

		.button.elem.block-popup
			h2 Пример открытия попапов
			.row
				.col
					a.btn.btn--blue.js-popup-link(data-link="feedback") Попап с формой
				.col
					a.btn.btn--blue.js-popup-link(data-link="ajax-content" href="ajax-content-example.html" data-href="ajax-content-example.html") Ajax-попап
				.col
					a.btn.btn--blue.js-popup-link(data-link="video" data-src="https://www.youtube.com/embed/Euv2ramIrv4?autoplay=1") Попапа с видео


